{
  "name": "nuxtjskoastarter",
  "version": "1.0.0",
  "description": "A starter template for nuxt.js with koa 2.0, sequelize and nightwatch.",
  "author": "Yannick Kooistra <yannick.kooistra@gmail.com>",
  "private": false,
  "scripts": {
    "dev": "nodemon -w app.js -w nuxt.config.js app.js",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node app.js",
    "precommit": "npm run lint",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "nightwatch"
  },
  "dependencies": {
    "async": "^2.4.0",
    "cross-env": "^3.1.4",
    "koa": "^2.0.0",
    "koa-router": "next",
    "nuxt": "latest",
    "pg": "^6.2.2",
    "pg-hstore": "^2.3.2",
    "sequelize": "^3.30.4"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.13.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "nightwatch": "^0.9.15",
    "nodemon": "^1.11.0",
    "scmp": "^2.0.0",
    "sequelize-cli": "^2.7.0"
  }
}
